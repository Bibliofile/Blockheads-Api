{
    "compilerOptions": {
        "outDir": "./",
        "target": "es6",
        "lib": ["es7", "dom.iterable", "scripthost"],
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
